{
    "name": "ec-europa/oe-poetry-client",
    "description": "Client library for the European Commission Poetry Service",
    "type": "library",
    "minimum-stability": "alpha",
    "prefer-stable": true,
    "license": "EUPL-1.1",
    "require": {
        "symfony/validator": "^3.3",
        "symfony/expression-language": "^3.3",
        "symfony/dom-crawler": "^3.3",
        "league/plates": "^3.3",
        "pimple/pimple": "^3.1",
        "psr/log": "^1.0",
        "psr/container": "^1.0",
        "ext-soap": "*"
    },
    "require-dev": {
        "ec-europa/oe-code-review": "^0.0.2",
        "phpunit/phpunit": "^5",
        "peridot-php/leo": "^1.6",
        "mockery/mockery": "^0.9.9",
        "phpspec/phpspec": "^4.0"
    },
    "suggest": {
        "monolog/monolog": "Log Poetry requests and responses via Monolog"
    },
    "autoload": {
        "psr-4": {
            "EC\\Poetry\\": "./src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "EC\\Poetry\\Tests\\": "./tests/src",
            "spec\\EC\\Poetry\\": "./spec"
        }
    }
}
